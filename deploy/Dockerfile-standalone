FROM ubuntu:16.04

ENV TERM=xterm

ARG BIN_NAME

RUN \
  apt-get update

ENV GOPATH /go
ENV PATH $GOPATH/bin:$PATH

RUN mkdir -p "$GOPATH/src" "$GOPATH/bin" && chmod -R 777 "$GOPATH"

COPY bin/$BIN_NAME $GOPATH/bin
RUN ln -s $GOPATH/bin/$BIN_NAME $GOPATH/bin/go_app 

WORKDIR $GOPATH/bin

ENTRYPOINT ["go_app"]
